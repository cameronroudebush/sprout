{
  "extends": "../common/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "paths": {
      "@common": ["../common/model/index"],
      "@backend/logger": ["./src/logger"],
      "@backend/financeAPI/*": ["./src/finance-api/*"],
      "@backend/config/*": ["./src/config/*"],
      "@backend/model/*": ["./src/model/*"],
      "@backend/database/*": ["./src/database/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*", "../common/src/**/*"]
}
